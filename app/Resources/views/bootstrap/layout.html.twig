<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>{% block title %}Student Review{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('vendor/bootstrap/css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('vendor/font-awesome/css/font-awesome.min.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/student/css/student.css') }}">
        {% endblock %}
    </head>
    <body>
        {% block body %}
            {% include 'bootstrap/navigation.html.twig' %}

            <div class="container">
                {% for message in app.flashes('notice') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                
                {% block content '' %}
            </div>
        {% endblock %}
        
        
        {% block javascripts %}{% endblock %}
    </body>
</html>
